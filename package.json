{
  "name": "@tiveor/scg",
  "version": "0.5.0",
  "description": "Simple Code Generator - A utility library for code generation and template processing",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "bin": {
    "scg": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "docs": "typedoc",
    "prepublishOnly": "npm run build",
    "example": "node example/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "code-generator",
    "template",
    "scaffolding",
    "ejs",
    "handlebars",
    "pug",
    "file-helper",
    "string-helper",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiveor/scg.git"
  },
  "author": "Alvaro Orellana",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tiveor/scg/issues"
  },
  "homepage": "https://github.com/tiveor/scg#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/ejs": "^3.1.5",
    "@types/node": "^25.2.3",
    "@types/pug": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "prettier": "^2.8.8",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "ejs": "^3.1.6",
    "handlebars": "^4.7.7",
    "pug": "^3.0.2"
  }
}
